<form>
  <div class="form-group">
    <textarea name="title" ng-model="keep.title" maxlength="100" class="form-control input-lg" placeholder="What you need to do?" ng-change="counter = keep.title.length || 0" required></textarea>
    <p class="pull-right mute" ng-class="{ 'danger': counter > 89 }">{{ counter || 0 }} characters... {{ 100 - counter }} remaining</p>
  </div>

  <div class="clearfix"></div>

  <div class="form-group row">
    <label for="keep_makro_id" class='tfix col-sm-7 text-right'>
      Is it Belongs To a Macro Task? 
    </label>

    <div class="col-sm-4">
      <select data-ng-model="keep.makro" class="form-control" data-ng-options="makro as makro.name for makro in makros track by makro.id">
        <option value="">Select Makro</option>
      </select>
    </select>
    </div>

    <div class="col-sm-1 no-padding" ng-controller="MakroCtrl">
      <a class="btn btn-info btn-xs btn-slim btn-trans" 
        uib-popover-template="'add-makro-form.html'" popover-title="Add A new Macro Task"
        popover-is-open="isOpen"
        style="position: absolute;" >
        <i class="glyphicon glyphicon-plus"></i>
      </a>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="actions pull-right">
    <input type="submit" ng-click="justKeepIt(keep)" value="Keep me for later" class="btn btn-primary" />
    <input type="submit" ng-click="startItNow(keep)" value="Starting Now!" class="btn btn-success" />
  </div>
</form>

<script type="text/ng-template" id="add-makro-form.html">
    <div class="input-group" >
      <input type="text" class="form-control" placeholder="Makro Task" name="makro.name" ng-model="makro.name">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button" ng-click="create(makro)">Add</button>
      </span>
    </div>
</script>